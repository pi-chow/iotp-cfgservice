<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cetiti.iotpcfgservice.mapper.DeviceAlarmConfigMapper">
    <resultMap id="BaseResultMap" type="com.cetiti.iotpcfgservice.domain.DeviceAlarmConfig">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="device_model" jdbcType="VARCHAR" property="deviceModel"/>
        <result column="device_model_name" jdbcType="VARCHAR" property="deviceModelName"/>
        <result column="field" jdbcType="VARCHAR" property="field"/>
        <result column="alarm_level" jdbcType="TINYINT" property="alarmLevel"/>
        <result column="conditions" jdbcType="VARCHAR" property="conditions"/>
        <result column="description" jdbcType="VARCHAR" property="description"/>
        <result column="alarm_id" jdbcType="VARCHAR" property="alarmId"/>
        <result column="modify_time" jdbcType="TIMESTAMP" property="modifyTime"/>
        <result column="create_user" jdbcType="VARCHAR" property="createUser"/>
        <result column="modify_user" jdbcType="VARCHAR" property="modifyUser"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, device_model, device_model_name, field, conditions, description, alarm_id, alarm_level,
        modify_time, create_user, modify_user, create_time
    </sql>

    <select id="getAlarmConfig" parameterType="java.lang.String" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_device_alarm_config
        where alarm_id = #{alarmId,jdbcType=VARCHAR}
    </select>

    <select id="searchDeviceAlarmConfig" parameterType="java.util.Map" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_device_alarm_config
        <where>
            <if test="deviceModel != null">
                AND device_model = #{deviceModel}
            </if>
            <if test="createUser != null">
                AND create_user = #{createUser}
            </if>
        </where>
    </select>

    <delete id="deleteByPrimaryKey" parameterType="java.lang.String">
      delete from t_device_alarm_config
      where alarm_id = #{alarmId,jdbcType=VARCHAR}
    </delete>

    <insert id="insert" parameterType="com.cetiti.iotpcfgservice.domain.DeviceAlarmConfig">
        insert into t_device_alarm_config (device_model,device_model_name,
          field, conditions,
          description, alarm_id, alarm_level,
          create_user, create_time
          )
        values (#{deviceModel,jdbcType=VARCHAR},#{deviceModelName,jdbcType=VARCHAR}
          #{field,jdbcType=VARCHAR}, #{conditions,jdbcType=VARCHAR},
          #{description,jdbcType=VARCHAR}, #{alarmId,jdbcType=VARCHAR}, #{alarmLevel,jdbcType=TINYINT}
          #{createUser,jdbcType=VARCHAR}, #{createTime,jdbcType=TIMESTAMP}
          )
    </insert>

    <update id="updateByPrimaryKeySelective" parameterType="com.cetiti.iotpcfgservice.domain.DeviceAlarmConfig">
        update t_device_alarm_config
            <set>
                <if test="deviceModel != null">
                    device_model = #{deviceModel,jdbcType=VARCHAR},
                </if>
                <if test="deviceModelName != null">
                    device_model_name = #{deviceModelName,jdbcType=VARCHAR},
                </if>
                <if test="field != null">
                    field = #{field,jdbcType=VARCHAR},
                </if>
                <if test="alarmLevel != null">
                    alarm_Level = #{alarmLevel,jdbcType=TINYINT},
                </if>
                <if test="conditions != null">
                    conditions = #{conditions,jdbcType=VARCHAR},
                </if>
                <if test="description != null">
                    description = #{description,jdbcType=VARCHAR},
                </if>
                <if test="modifyTime != null">
                    modify_time = #{modifyTime,jdbcType=TIMESTAMP},
                </if>
                <if test="modifyUser != null">
                    modify_user = #{modifyUser,jdbcType=VARCHAR},
                </if>
            </set>
        where alarm_id = #{alarmId,jdbcType=VARCHAR}
    </update>
</mapper>